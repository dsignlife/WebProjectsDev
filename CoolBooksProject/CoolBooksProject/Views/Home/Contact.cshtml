@model CoolBooksProject.ViewModels.ContactViewModel

@{
    ViewBag.Title = "Contact";
}

<h3>@ViewBag.Message</h3>



<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Contact US</h2>
        <form method="post">
            
            @if (ViewBag.UserMessage != null)
            {
                <div>@ViewBag.UserMessage</div>
            }
            
          
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
                
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" asp-for="Email" class="form-control"  />
               
            </div>

            <div class="form-group">
                <label>Message</label>
                <textarea cols="40" rows="4" asp-for="Message" class="form-control" ></textarea>
                
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Send Message" class="btn btn-success"/>
                <a asp-controller="App" asp-action="Index" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</div>