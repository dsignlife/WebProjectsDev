@model CoolBooksProject.Models.Books


<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImagePath" class="img-thumbnail" max-width="100" max-height="150" onclick="location.href='@Url.Action("Details", "Home", new { id = Model.Id })'">
        <div class="caption" id="@Model.Id">
            <h6 class="pull-right">@Model.Genres.Name</h6><h6>@Html.ActionLink(@Model.Title, "Details", new { id= Model.Id }) </h6>
        </div>
    </div>
</div>


